@page "/ingredients-list"

@using Recipe_Proj.Services
@using Recipe_Proj.DTOs
@inject IRecipeService RecipeService

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Find Your Recipe</title>

    <style>
         body {
            background-image: url('/images/brooke-lark-jUPOXXRNdcA-unsplash.jpg'); 
            background-size: cover; 
            background-position: center center; 
            background-repeat: no-repeat; 
            font-family: Arial, sans-serif; 
            color: #333; /* Improved text color for readability */
        }
        h1 {
            text-align: center;
            background-color: rgba(255, 255, 255, 0.85); /* Light background for the header */
            margin: 0 auto 20px;
            padding: 20px;
            max-width: 80%;
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Soft shadow for depth */
            font-size: 2.5em; /* Larger size */
            font-weight: bold; /* Bold weight */
        }
        .ingredients-list {
            list-style-type: none;
            padding: 0;
            max-width: 80%;
            margin: 0 auto 20px;
            background-color: rgba(255, 255, 255, 0.85); /* Light background for the list */
            border-radius: 8px;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Soft shadow for depth */
            padding: 20px;
        }
        .ingredients-list li {
            margin-bottom: 0.5em;
            background-color: transparent; /* Removing background from individual items */
        }
        .ingredients-list label {
            margin-left: 0.5em;
            font-size: 1.2em; /* Larger label size */
        }
        .btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 10px 20px;
            text-align: center;
            display: inline-block;
            margin: 4px 2px;
            cursor: pointer;
            border-radius: 4px;
            transition: background-color 0.3s;
            font-size: 1.2em; /* Larger button text */
            box-shadow: 0 4px 6px rgba(0,0,0,0.1); /* Soft shadow for the button */
        }
        .btn:hover {
            background-color: #45a049;
        }
        form {
            max-width: 600px;
            margin: auto;
        }
    </style>
</head>
<body>
    <h1>Find Your Recipe</h1>
    <div style="max-width: 600px; margin: auto;">
        <input type="text" @bind="searchKeywords" placeholder="Search for recipes..." style="
            width: 80%;
            padding: 12px 20px;
            margin: 8px 0;
            display: inline-block;
            border: 1px solid #ccc;
            border-radius: 4px;
            box-sizing: border-box; /* Added styles for the search bar */
        ">
        <button @onclick="SearchRecipes" class="btn">Search Recipes</button>
    </div>

    @if (recipes == null)
    {
        <p><em>Loading...</em></p>
    }
    else if (recipes.Count == 0)
    {
        <p>No recipes found.</p>
    }
    else
    {
        <ul class="ingredients-list">
            @foreach (var recipe in recipes)
            {
                <li>@recipe.RecipeName</li>
            }
        </ul>
    }
</body>
</html>

@code {
    private List<SimpleRecipeDTO> recipes;
    private string searchKeywords;

    private async Task SearchRecipes() 
    {
        try 
        {
            recipes = await RecipeService.SearchRecipesByKeywords(searchKeywords);
        } 
        catch (Exception ex) 
        {
            Console.WriteLine($"Error occurred while searching for recipes: {ex.Message}");
            // You may want to provide user feedback here
        }
    }
}
